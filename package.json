{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "description": "Running Node.js project as a binary",
  "type": "module",
  "scripts": {
    "dev": "tsx ./src/index.ts --watch",
    "start": "tsx ./src/index.ts",
    "build": "tsup",
    "package": "pkg bundle/index.cjs --config ./pkg.json -o ./bin/server-x86_64-pc-windows.exe --debug --public --no-bytecode",
    "bundle": "tsx ./bundle.ts",
    "db:generate": "prisma generate",
    "db:push": "drizzle-kit generate",
    "db:migrate": "tsx ./migrate.ts",
    "db:studio": "drizzle-kit studio --verbose"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.2.17",
    "@hono/node-server": "^1.1.0",
    "@hono/zod-validator": "^0.1.3",
    "@noble/hashes": "^1.7.1",
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/client": "6.1.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.39.3",
    "hono": "^3.3.1",
    "server-only": "^0.0.1",
    "undici": "^7.1.0",
    "ws": "^8.13.0",
    "znv": "^0.4.0",
    "zod": "^3.24.1",
    "zod-prisma": "^0.5.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^18.15.11",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@yao-pkg/pkg": "^5.11.5",
    "bufferutil": "^4.0.8",
    "drizzle-kit": "^0.30.4",
    "fs-extra": "^11.3.0",
    "prettier": "^3.2.5",
    "prisma": "6.1.0",
    "prisma-generator-drizzle": "^0.7.6",
    "ts-loader": "^9.5.2",
    "tslib": "^2.8.1",
    "tsup": "^8.3.6",
    "tsx": "^3.12.7",
    "typescript": "^5.7.3"
  }
}